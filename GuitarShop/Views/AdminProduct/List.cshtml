@model ProductListViewModel
@{
    Layout = "_AdminLayout";
    ViewBag.Title = "Product Manager";
}

<h1>@ViewBag.Title</h1>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success alert-dismissible" role="alert">
        <button type="button" class="btn-close" 
                data-bs-dismiss="alert" aria-label="Close">
        </button>
        @TempData["Message"]
    </div>
}

<div class="row">
    <div class="col-sm-2">
        <vc:category-menu></vc:category-menu>
    </div>

    <div class="col-sm-10">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th class="text-end">Price</th>
                    <th></th>
                    <th></th>
            </thead>
            <tbody>
                @foreach (var p in Model.Products)
                {
                    <tr>
                        <td>@p.Name</td>
                        <td class="text-end">@p.Price.ToString("C")</td>
                        <td>
                            <a asp-action="Update"
                           asp-route-id="@p.ProductID">Update</a>
                        </td>
                        <td>
                            <a asp-action="Delete"
                           asp-route-id="@p.ProductID">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <a asp-action="Add" class="btn btn-primary">Add New Product</a>
    </div>
</div>
