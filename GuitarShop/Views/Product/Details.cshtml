@model Product
@{
    ViewBag.Title = "Product Details";
}

<h1>Product Details</h1>
<div class="row">
    <div class="col-sm-4">
        <img src="~/images/@ViewBag.ImageFilename" 
             alt="@Model.Name Image" 
             class="img-fluid"/>
    </div>

    <div class="col-sm-8">
        <h2>@Model.Name</h2>
        <table class="table table-bordered table-striped">
            <tr>
                <td>List Price:</td>
                <td>@Model.Price.ToString("C")</td>
            </tr>
            <tr>
                <td>Discount Percent:</td>
                <td>@Model.DiscountPercent.ToString("P0")</td>
            </tr>
            <tr>
                <td>Your Price:</td>
                <td>@Model.DiscountPrice.ToString("C") 
                (You save @Model.DiscountAmount.ToString("C"))</td>
            </tr>
        </table>

        @if (User.Identity.IsAuthenticated && User.IsInRole("Customer"))
        {
            <a asp-controller="Cart" asp-action="Add"
               asp-route-id="@Model.Slug" class="btn btn-primary">Add to Cart</a>
        }
        <a asp-action="List"
           class="btn btn-outline-primary">Return to List</a>
    </div>
</div>